          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Sync User with RevenueCat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"email\": \"test@example.com\",\n  \"revenuecat_app_user_id\": \"{{revenuecat_app_user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/revenuecat/users/sync",
              "host": ["{{base_url}}"],
              "path": ["api", "revenuecat", "users", "sync"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscription Verification",
      "item": [
        {
          "name": "Verify Subscription",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/revenuecat/subscriptions/verify/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "revenuecat", "subscriptions", "verify", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Get Subscription Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/revenuecat/subscriptions/status/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "revenuecat", "subscriptions", "status", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Get Subscription History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/revenuecat/subscriptions/history/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "revenuecat", "subscriptions", "history", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Functions",
      "item": [
        {
          "name": "Grant Access (Promotional)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{user_id}}\",\n  \"productId\": \"yearly_premium\",\n  \"durationDays\": 365\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/revenuecat/subscriptions/grant-access",
              "host": ["{{base_url}}"],
              "path": ["api", "revenuecat", "subscriptions", "grant-access"]
            }
          }
        }
      ]
    }
  ]
}
